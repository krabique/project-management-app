<h3 class="text-center">My Projects</h3>
<% unless @my_projects.empty? %>
  <div class="list-group projects-list">
    <% @my_projects.each do |project| %>
      <%= link_to(project.title, project, :class => "list-group-item") %>
    <% end %>
  </div>
<% else %>
  <h5 class="text-center">You have no projects!</h5>
<% end %>