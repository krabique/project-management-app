<h3>
  <%= @wiki.title %>
</h3>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <%= markdown(@wiki.body) %>
    </div>
  </div>
</div>
<br>

<p>
  <strong>Creator: </strong>
  <% if @users.find_by_id(@wiki.creator) %>
      <%= image_tag(@users.find_by_id(@wiki.creator).avatar.url(:thumb), 
        :class => "user-thumb-image user-list") %>
      <%= link_to(@users.find_by_id(@wiki.creator).name, 
        @users.find_by_id(@wiki.creator)) %>
        at <%= @wiki.created_at %>
  <% else %>
    Unknown
  <% end %>
</p>

<% unless @wiki.last_editor.nil? %>
  <p>
    <strong>Last editor:</strong>
    <%= image_tag(@users.find_by_id(@wiki.last_editor).avatar.url(:thumb), 
      :class => "user-thumb-image user-list") %>
    <%= link_to(@users.find_by_id(@wiki.last_editor).name, 
      @users.find_by_id(@wiki.last_editor)) %>
    at <%= @wiki.updated_at %>
  </p>
<% end %>


<%= link_to (raw '<i class="fa fa-pencil" aria-hidden="true">
  </i> Edit'), edit_project_wiki_path(@wiki) %>
  <br>
<%= link_to (raw '<i class="fa fa-arrow-left" aria-hidden="true">
  </i> Back'), @wiki.project %>
