<p id="notice"><%= notice %></p>

<h1>Discussions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Creator</th>
      <th>Last editor</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
        <td><%= discussion.title %></td>
        <td><%= discussion.body %></td>
        <td><%= discussion.creator %></td>
        <td><%= discussion.last_editor %></td>
        <td><%= discussion.project %></td>
        <td><%= link_to 'Show', project_discussion_path(project.id, discussion.id) %></td>
        <td><%= link_to 'Edit', edit_project_discussion_path(discussion) %></td>
        <td><%= link_to 'Destroy', project_discussion_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

